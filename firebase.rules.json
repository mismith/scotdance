{
  "rules": {
    "$environment": {
      ".read": "root.child($environment).child('permissions/users').child(auth.uid).child('admin').val() === true", // is ADMIN
      ".write": "root.child($environment).child('permissions/users').child(auth.uid).child('admin').val() === true", // is ADMIN

      "faqs": {
        ".read": true
      },
      "competitions": {
        ".read": true,
        "$competitionId": {
          ".write": "root.child($environment).child('permissions/users').child(auth.uid).child('competitions').child($competitionId).val() === true" // has PERMISSION
        }
      },
      "competitions:data": {
        "$competitionId": {
          ".read": "root.child($environment).child('competitions').child($competitionId).child('published').val() === true || root.child($environment).child('permissions/users').child(auth.uid).child('competitions').child($competitionId).val() === true", // is PUBLISHED || has PERMISSION
          ".write": "root.child($environment).child('permissions/users').child(auth.uid).child('competitions').child($competitionId).val() === true", // has PERMISSION
          "invites": {
            "$inviteId": {
              ".read": "auth !== null", // is AUTHED
              ".write": "auth !== null" // is AUTHED
            }
          }
        }
      },
      "users": {
        "$userId": {
          ".read": "auth !== null && auth.uid === $userId", // is SELF
          ".write": "auth !== null && auth.uid === $userId" // is SELF
        }
      },
      "users:favorites": {
        "$userId": {
          ".read": "auth !== null && auth.uid === $userId", // is SELF
          ".write": "auth !== null && auth.uid === $userId" // is SELF
        }
      },
      "permissions": {
        "competitions": {
          "$competitionId": {
            ".read": "root.child($environment).child('permissions/users').child(auth.uid).child('competitions').child($competitionId).val() === true" // has PERMISSION to same COMPETITION
          }
        },
        "users": {
          "$userId": {
            ".read": "auth !== null && auth.uid === $userId", // is SELF
            ".write": "auth !== null && auth.uid === $userId && !newData.exists()" // is REMOVING OWN permissions
          }
        }
      }
    }
  }
}
