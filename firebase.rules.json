{
  "rules": {
    "$environment": {
      "sections": {
        ".read": true,
        ".write": false
      },
      "competitions": {
        ".read": true,
        ".write": "root.child($environment).child('users').child(auth.uid).child('admin').val() === true" // is ADMIN
      },
      "competitions:data": {
        ".write": "root.child($environment).child('users').child(auth.uid).child('admin').val() === true", // is ADMIN
        "$competitionId": {
          ".read": "root.child($environment).child('competitions').child($competitionId).child('published').val() === true || root.child($environment).child('users').child(auth.uid).child('admin').val() === true" // is PUBLISHED || is ADMIN
        }
      },
      "faqs": {
        ".read": true,
        ".write": "root.child($environment).child('users').child(auth.uid).child('admin').val() === true" // is ADMIN
      },
      "users": {
        "$userId": {
          ".read": "auth != null && auth.uid === $userId", // is SELF
          ".write": "auth != null && auth.uid === $userId" // is SELF
        }
      },
      "users:favorites": {
        "$userId": {
          ".read": "auth != null && auth.uid === $userId", // is SELF
          ".write": "auth != null && auth.uid === $userId" // is SELF
        }
      }
    }
  }
}
