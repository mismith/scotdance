{
  "rules": {
    "$environment": {
      "sections": {
        ".read": true,
        ".write": false
      },
      "faqs": {
        ".read": true,
        ".write": false
      },
      "competitions": {
        ".read": true,
        ".write": "root.child($environment).child('users:permissions').child(auth.uid).hasChild('admin') === true" // is ADMIN
      },
      "competitions:data": {
        ".read": "root.child($environment).child('users:permissions').child(auth.uid).hasChild('admin') === true", // is ADMIN
        ".write": "root.child($environment).child('users:permissions').child(auth.uid).hasChild('admin') === true", // is ADMIN
        "$competitionId": {
          ".read": "root.child($environment).child('competitions').child($competitionId).child('published').val() === true || root.child($environment).child('users:permissions').child(auth.uid).child('competitions:data').hasChild($competitionId) === true", // is PUBLISHED || has PERMISSION
          "$sectionId": {
            ".write": "root.child($environment).child('users:permissions').child(auth.uid).child('competitions:data').child($competitionId).hasChild($sectionId) === true" // has PERMISSION
          }
        }
      },
      "users": {
        "$userId": {
          ".read": "auth != null && auth.uid === $userId", // is SELF
          ".write": "auth != null && auth.uid === $userId" // is SELF
        }
      },
      "users:favorites": {
        "$userId": {
          ".read": "auth != null && auth.uid === $userId", // is SELF
          ".write": "auth != null && auth.uid === $userId" // is SELF
        }
      },
      "users:permissions": {
        "$userId": {
          ".read": "auth != null && auth.uid === $userId", // is SELF
          ".write": false
        }
      }
    }
  }
}
