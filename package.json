{
  "name": "scotdance",
  "version": "3.6.0",
  "description": "Highland dancing event tracker",
  "author": "Murray Rowan <murray@mismith.info>",
  "scripts": {
    "emulate:firebase": "firebase emulators:start --import=.firebase/emulator-data --export-on-exit",
    "emulate:firebase:cy": "firebase emulators:start",
    "emulate:typesense": "./typesense-server --log-dir .typesense/logs --data-dir .typesense/emulator-data --listen-port=8108 --api-key=xyz --enable-cors",
    "dev:functions": "npm run --prefix functions/ dev",
    "dev:www": "vite --https --host",
    "dev": "run-p emulate:firebase emulate:typesense dev:functions dev:www",
    "dev:production": "run-p emulate:firebase emulate:typesense dev:functions \"dev:www -- --open '/?production'\"",
    "dev:cy": "FIREBASE_CYPRESS=true run-p emulate:firebase:cy emulate:typesense dev:functions \"dev:www -- --open '/?cypress'\" \"cy -- open\"",
    "dev:cy:ci": "npm run build:www && npm run test:cy:ci",
    "cy": "CYPRESS_BASE_URL=https://localhost:5173 cypress",
    "cy:ci": "CYPRESS_BASE_URL=http://localhost:5050 cypress",
    "test:cy:ci": "FIREBASE_CYPRESS=true firebase emulators:exec \"npm run cy:ci -- run\"",
    "test": "npm run lint && npm run build:ci && npm run test:cy:ci",
    "lint:www": "eslint './{src,cypress}/**/*.{js,ts,vue}'",
    "lint:functions": "npm run --prefix functions/ lint",
    "lint": "npm run lint:www && npm run lint:functions",
    "lint:fix": "npm run lint:www -- --fix && npm run lint:functions -- -- --fix",
    "set-version": "node ./set-version.js",
    "postset-version": "npx cap copy",
    "sync-version": "pilfer-package version > public/version.json && npm run set-version -- $npm_package_version",
    "notify": "node ./notify.js",
    "resources": "cordova-res ios --skip-config --copy && cordova-res android --skip-config --copy",
    "screenshots": "bash ./ios/App/Screenshots/Screenshots.sh",
    "build:www": "vite build",
    "build:functions": "npm run --prefix functions/ build",
    "build:ci": "npm run build:www && npm run build:functions",
    "build": "npm run sync-version && npm test && npx cap sync && npm run notify 'Build Complete'",
    "report": "npm run build:www && open stats.html",
    "release": "git commit -a -m $npm_package_version && git tag \"v${npm_package_version}\"",
    "deploy": "firebase deploy && git push origin HEAD:main --tags"
  },
  "dependencies": {
    "@capacitor/android": "^3.2.5",
    "@capacitor/cli": "^3.2.5",
    "@capacitor/core": "^3.2.5",
    "@capacitor/device": "^1.0.5",
    "@capacitor/ios": "^3.2.5",
    "@capacitor/splash-screen": "^1.1.5",
    "@handsontable/vue": "^11.1.0",
    "@mdi/js": "^5.9.55",
    "@mismith/firebase-tools": "^1.4.1",
    "@outluch/v-file": "^1.0.0",
    "array-move-multiple": "^1.0.5",
    "compare-versions": "^3.6.0",
    "deep-property": "^1.1.0",
    "fast-html-parser": "^1.0.1",
    "firebase": "^8.10.0",
    "fuse.js": "^6.5.3",
    "handsontable": "^12.2.0",
    "lodash.find": "^4.6.0",
    "lodash.groupby": "^4.6.0",
    "lodash.orderby": "^4.6.0",
    "lodash.pick": "^4.4.0",
    "md5": "^2.3.0",
    "moment": "^2.29.4",
    "node-notifier": "^8.0.2",
    "obj-flatten": "^2.0.6",
    "roboto-fontface": "*",
    "sanitize-html": "^2.5.2",
    "save-csv": "^4.1.0",
    "simple-line-icons": "^2.5.5",
    "vue": "^2.7.14",
    "vue-async-computed": "^3.9.0",
    "vue-body-class": "^2.0.0-beta.2",
    "vue-localstorage": "^0.6.2",
    "vue-observe-visibility": "^0.4.6",
    "vue-reactive-provide": "^0.3.0",
    "vue-router": "^3.4.3",
    "vue-scrollto": "^2.18.2",
    "vuedraggable": "^2.24.1",
    "vuefire": "^1.4.4",
    "vuetify": "^2.6.0",
    "vuex": "^3.5.1",
    "vuex-map-fields": "^1.4.0",
    "vuexfire": "^2.3.0",
    "xlsx": "^0.18.2"
  },
  "devDependencies": {
    "@vitejs/plugin-vue2": "^2.2.0",
    "autoprefixer": "^10.4.14",
    "cordova-res": "^0.15.4",
    "cypress": "^12.17.2",
    "cypress-file-upload": "^5.0.8",
    "eslint": "^8.45.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-plugin-cypress": "^2.13.3",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-vue": "^9.15.1",
    "firebase-admin": "^11.10.1",
    "firebase-tools": "^12.4.5",
    "npm-run-all": "^4.1.5",
    "pilfer-package": "^1.0.0",
    "postcss": "^8.4.27",
    "rollup-plugin-visualizer": "^5.8.3",
    "sass": "^1.26.12",
    "unplugin-vue-components": "^0.16.0",
    "vite": "^3.2.7",
    "vite-plugin-eslint": "^1.8.1",
    "vite-plugin-mkcert": "^1.16.0",
    "vue-template-compiler": "^2.7.14"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "parserOptions": {
      "ecmaVersion": 2020
    },
    "settings": {
      "import/resolver": {
        "alias": {
          "map": [
            [
              "@",
              "./src"
            ]
          ]
        }
      }
    },
    "extends": [
      "plugin:cypress/recommended",
      "plugin:vue/essential",
      "airbnb-base"
    ],
    "rules": {
      "arrow-body-style": 0,
      "max-len": 0,
      "no-unused-vars": 1,
      "import/no-cycle": 0,
      "vue/no-mutating-props": 1,
      "vue/multi-word-component-names": 0,
      "import/no-extraneous-dependencies": [
        "error",
        {
          "devDependencies": [
            "**/*.test.js",
            "**/*.spec.js",
            "cypress/**/*"
          ]
        }
      ]
    }
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 11"
  ],
  "engines": {
    "node": "18",
    "npm": "9"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git://github.com/mismith/scotdance.git"
  }
}
