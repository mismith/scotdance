{
  "database": {
    "rules": "firebase.rules.json"
  },
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "admin/**",
        "destination": "admin/html/index.html"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
