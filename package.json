{
  "name": "scotdance",
  "version": "3.0.1",
  "description": "Highland dancing event tracker",
  "author": "Murray Rowan <murray@mismith.info>",
  "scripts": {
    "emulate": "firebase emulators:start --import=.firebase/emulator-data --export-on-exit",
    "dev:functions": "npm run --prefix functions/ dev",
    "dev:www": "vite --https --host",
    "dev": "run-p dev:functions emulate dev:www",
    "dev:cy": "FIREBASE_CYPRESS=true run-p dev:functions emulate \"dev:www -- --open '/?cypress'\" \"cy -- open\"",
    "cy": "CYPRESS_BASE_URL=https://localhost:3000 cypress",
    "cy:ci": "CYPRESS_BASE_URL=http://localhost:5000 cypress",
    "test:cy:ci": "FIREBASE_CYPRESS=true firebase emulators:exec \"npm run cy:ci -- run\"",
    "test": "npm run lint && npm run build:ci && npm run test:cy:ci",
    "lint:www": "eslint './{src,cypress}/**/*.{js,ts,vue}'",
    "lint:functions": "npm run --prefix functions/ lint",
    "lint": "npm run lint:www && npm run lint:functions",
    "lint:fix": "npm run lint:www -- --fix && npm run lint:functions -- --fix",
    "set-version": "node ./set-version.js",
    "postset-version": "npx cap copy",
    "sync-version": "pilfer-package version > public/version.json && npm run set-version -- $npm_package_version",
    "notify": "node ./notify.js",
    "resources": "cordova-res ios --skip-config --copy && cordova-res android --skip-config --copy",
    "screenshots": "bash ./ios/App/Screenshots/Screenshots.sh",
    "build:functions": "npm run --prefix functions/ build",
    "build:www": "vite build",
    "build:ci": "npm run build:functions && npm run build:www",
    "build": "npm run sync-version && npm test && npx cap sync && npm run notify 'Build Complete'",
    "report": "npm run build:www && open stats.html",
    "release": "git commit -a -m $npm_package_version && git tag \"v${npm_package_version}\"",
    "deploy": "firebase deploy && git push origin HEAD:main --tags"
  },
  "dependencies": {
    "@capacitor/android": "^3.2.5",
    "@capacitor/cli": "^3.2.5",
    "@capacitor/core": "^3.2.5",
    "@capacitor/device": "^1.0.5",
    "@capacitor/ios": "^3.2.5",
    "@capacitor/splash-screen": "^1.1.5",
    "@handsontable/vue": "^4.1.1",
    "@mdi/js": "^5.9.55",
    "@mismith/firebase-tools": "^1.3.3",
    "@outluch/v-file": "^1.0.0",
    "compare-versions": "^3.6.0",
    "deep-property": "^1.1.0",
    "fast-html-parser": "^1.0.1",
    "firebase": "^8.10.0",
    "fuse.js": "^3.6.1",
    "handsontable": "^7.3.0",
    "lodash.find": "^4.6.0",
    "lodash.groupby": "^4.6.0",
    "lodash.orderby": "^4.6.0",
    "md5": "^2.3.0",
    "moment-mini": "^2.24.0",
    "node-notifier": "^8.0.2",
    "obj-flatten": "^2.0.6",
    "roboto-fontface": "*",
    "sanitize-html": "^2.5.2",
    "save-csv": "^4.1.0",
    "simple-line-icons": "^2.5.5",
    "vue": "^2.6.14",
    "vue-async-computed": "^3.9.0",
    "vue-body-class": "^2.0.0-beta.2",
    "vue-localstorage": "^0.6.2",
    "vue-observe-visibility": "^0.4.6",
    "vue-reactive-provide": "^0.3.0",
    "vue-router": "^3.4.3",
    "vue-scrollto": "^2.18.2",
    "vuedraggable": "^2.24.1",
    "vuefire": "^1.4.4",
    "vuetify": "^2.6.0",
    "vuex": "^3.5.1",
    "vuex-map-fields": "^1.4.0",
    "vuexfire": "^2.3.0",
    "xlsx": "^0.17.3"
  },
  "devDependencies": {
    "autoprefixer": "^10.3.7",
    "cordova-res": "^0.15.1",
    "cypress": "^9.0.0",
    "eslint": "^7.32.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-plugin-cypress": "^2.12.1",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-vue": "^7.20.0",
    "firebase-admin": "^10.0.0",
    "firebase-tools": "^9.22.0",
    "lint-staged": "^11.2.4",
    "npm-run-all": "^4.1.5",
    "pilfer-package": "^1.0.0",
    "postcss": "^8.3.11",
    "rollup-plugin-visualizer": "^5.5.2",
    "sass": "^1.26.11",
    "unplugin-vue-components": "^0.16.0",
    "vite": "^2.6.12",
    "vite-plugin-eslint": "^1.3.0",
    "vite-plugin-vue2": "^1.9.0",
    "vue-template-compiler": "^2.6.14"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "parserOptions": {
      "ecmaVersion": 2020
    },
    "settings": {
      "import/resolver": {
        "alias": {
          "map": [
            [
              "@",
              "./src"
            ]
          ]
        }
      }
    },
    "extends": [
      "plugin:cypress/recommended",
      "plugin:vue/essential",
      "airbnb-base"
    ],
    "rules": {
      "arrow-body-style": 0,
      "max-len": 0,
      "no-unused-vars": 1,
      "import/no-cycle": 0,
      "vue/no-mutating-props": 1,
      "import/no-extraneous-dependencies": ["error", {"devDependencies": ["**/*.test.js", "**/*.spec.js", "cypress/**/*"]}]
    }
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 11"
  ],
  "engines": {
    "node": ">= 14",
    "npm": ">= 6"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git://github.com/mismith/scotdance.git"
  }
}
